#!/bin/bash
function Code(){
echo -e "\nAvailable operations:\n0,Split-Pane Vertical\n1,Split-Pane Horizontal\n2,Create new Session\n3,Attach to session\n4,Detach from session\n5,List sessions"
echo -n 'What operation would you like to proceed with? '
read operation
case $operation in
         5)
                tmux ls                  ;;
         4)
  tmux detach;;
         3)
echo -n 'What is the session name? '
read name
tmux attach -t $name
                                         ;;
   2)
echo -n 'What should be the name? '
read sessionName
tmux new -s $sessionName ;;
   1) tmux split-pane -f;;
   0) tmux split-pane -h ;;
   *) echo -n "unknown operation" && Code ;;
esac
}
Code
